<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_head"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="xxxx"
                android:textSize="25sp" />
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/ll_integral"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="10dp"
            android:elevation="4dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ll_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="消息中心"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp">
                    <TextView
                        android:id="@+id/tv_integral"
                        android:text="本站积分：xxx"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/tv_integral_level"
                        android:text="lvN"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/tv_integral_rank"
                        android:text="排名9999999"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/ll_mine"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:elevation="4dp"
            android:layout_below="@+id/ll_integral"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_collect_article"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:background="@drawable/bg_article"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="收藏文章"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_share_article"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_article"
                    android:gravity="center"
                    android:text="分享文章"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_collect_web"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_article"
                    android:gravity="center"
                    android:text="收藏网站"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_share_project"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_article"
                    android:gravity="center"
                    android:text="分享项目"
                    android:textSize="22sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ll_basic_operation"
            app:cardCornerRadius="10dp"
            android:elevation="4dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/ll_mine"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_change_password"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:background="@drawable/bg_article_2"
                android:gravity="center"
                android:text="修改密码"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_improve_personal_information"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_article_2"
                android:gravity="center"
                android:text="完善个人信息"
                android:textSize="22sp" />
        </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            android:elevation="4dp"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/ll_basic_operation"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_back_login"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary"
            android:text="退出登录"
            android:textColor="@color/white" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>